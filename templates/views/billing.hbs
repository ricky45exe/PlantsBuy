<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="images/logo.jpg" />
    <title>PlantsBuy</title>
    <style>
      @import
      url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600&display=swap");
      * { font-family: "Poppins", sans-serif; margin: 0; padding: 0; box-sizing:
      border-box; outline: none; border: none; text-transform: capitalize;
      transition: all 0.2s linear; } .container { display: flex;
      justify-content: center; align-items: center; padding: 25px; min-height:
      100vh;} .container form { padding: 20px; width: 500px; background: #fff;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1); } .container form .row {
      display: flex; flex-wrap: wrap; gap: 15px; } .container form .row .col {
      flex: 1 1 250px; } .container form .row .col .title { font-size: 20px;
      color: #333; padding-bottom: 5px; text-transform: uppercase; } .container
      form .row .col .inputBox { margin: 15px 0; } .container form .row .col
      .inputBox span { margin-bottom: 10px; display: block; } .container form
      .row .col .inputBox input { width: 100%; border: 1px solid #ccc; padding:
      10px 15px; font-size: 15px; text-transform: none; } .container form .row
      .col .inputBox input:focus { border: 1px solid #000; } .container form
      .row .col .flex { display: flex; gap: 15px; } .container form .row .col
      .flex .inputBox { margin-top: 5px; } .container form .row .col .inputBox
      img { height: 34px; margin-top: 5px; filter: drop-shadow(0 0 1px #000); }
      .container form .submit-btn { width: 100%; padding: 12px; font-size: 17px;
      background: #27ae60; color: #fff; margin-top: 5px; cursor: pointer; }
      .container form .submit-btn:hover { background: #2ecc71; } .paymenttype {
      display: flex; justify-content: center; align-items: center; gap: 15px;
      margin-top: 15px; } body {background-image:url("images/newbill.jpg");
      background-size: cover; }
    </style>
  </head>
  <body>
    <div class="container">
      <form id="checkoutForm">
        <div class="row">
          <div class="col">
            <h3 class="title">billing address</h3>

            <div class="inputBox">
              <span>Full name :</span>
              <input type="text" placeholder="Your Full Name" required />
            </div>
            <div class="inputBox">
              <span>email :</span>
              <input type="email" placeholder="example@xyz.com" required />
            </div>
            <div class="inputBox">
              <span>address :</span>
              <input type="text" placeholder="Locality" required />
            </div>

            <div class="flex">
              <div class="inputBox">
                <span>state :</span>
                <input type="text" placeholder="India" required />
              </div>
              <div class="inputBox">
                <span>zip code :</span>
                <input
                  type="text"
                  minlength="6"
                  maxlength="6"
                  placeholder="123 456"
                  required
                />
              </div>
            </div>
            <div class="inputBox">
              <span>phone :</span>
              <input type="tel" placeholder="123 456 7890" required />
            </div>
            <div class="paymenttype">
              <input
                type="radio"
                name="payment"
                id="card"
                value="card"
                required
              />
              Card Payment
              <input
                type="radio"
                name="payment"
                id="cash"
                value="cash"
                required
              />
              Cash on Delivery
            </div>
          </div>
        </div>

        <input type="submit" value="proceed to checkout" class="submit-btn" />
      </form>

      {{#if isAuthenticated}}
        <script>
          document .getElementById("checkoutForm") .addEventListener("submit",
          function (event) { event.preventDefault(); var paymentMethod =
          document.querySelector( 'input[name="payment"]:checked' ).value; if
          (paymentMethod === "card") { window.location.href =
          "http://localhost:4500/card"; } else if (paymentMethod === "cash") {
          window.location.href = "http://localhost:4500/thank"; } });
        </script>

      {{else}}
        <script>
          document .getElementById("checkoutForm") .addEventListener("submit",
          function (event) { event.preventDefault(); var paymentMethod =
          document.querySelector( 'input[name="payment"]:checked' ).value; if
          (paymentMethod === "card") { window.location.href =
          "http://localhost:4500/registration"; } else if (paymentMethod ===
          "cash") { window.location.href = "http://localhost:4500/registration";
          } });
        </script>

      {{/if}}

    </div>
  </body>
</html>